@{
    ViewData["Title"] = "Resumo";
}

@model Pedido;

<h3>Resumo do Viagem</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>@(Model.Id)</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Seus Dados</h3>
                <div>Henrique Marques</div>
                <div>(18) 99140-3108</div>
            </div>
            <div class="col-md-3">
                henrique.dev@dev.com
            </div>
            <div class="col-md-6">
                <h3>Endereço de Entrega</h3>
                <div>Rua das Pedras, Sem Numero</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Quantidade</h3>
            </div>
        </div>
        @foreach(var item in Model.Itens){
        <div class="row">
            <div class="col-md-10">
                <div>@(item.Viagem.Nome)</div>
            </div>
            <div class="col-md-2">
                <div class="pull-right">@(item.Quantidade)</div>
            </div>
        </div>
        }
    </div>
</div>
